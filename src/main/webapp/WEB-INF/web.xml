<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>E-Rock Music Shop</display-name>

    <context-param>
        <param-name>file_upload</param-name>
        <param-value>C:\Program Files\apache-tomcat-8.5.6\webapps\ROOT\img\albumcovers\</param-value>
        <description>File Upload Location</description>
    </context-param>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>ru.itis.kpfu.marsel_mustafin.controllers.servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>ru.itis.kpfu.marsel_mustafin.controllers.servlets.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>ru.itis.kpfu.marsel_mustafin.controllers.servlets.Registration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Products</servlet-name>
        <servlet-class>ru.itis.kpfu.marsel_mustafin.controllers.servlets.Products</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductDetail</servlet-name>
        <jsp-file>/views/product.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ProductRemove</servlet-name>
        <servlet-class>ru.itis.kpfu.marsel_mustafin.controllers.servlets.ProductRemove</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCart</servlet-name>
        <servlet-class>ru.itis.kpfu.marsel_mustafin.controllers.servlets.AddToCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductOperation</servlet-name>
        <servlet-class>ru.itis.kpfu.marsel_mustafin.controllers.servlets.ProductOperation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveFromCart</servlet-name>
        <servlet-class>ru.itis.kpfu.marsel_mustafin.controllers.servlets.RemoveFromCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommentOperation</servlet-name>
        <servlet-class>ru.itis.kpfu.marsel_mustafin.controllers.servlets.CommentOperation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Buy</servlet-name>
        <servlet-class>ru.itis.kpfu.marsel_mustafin.controllers.servlets.Buy</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cart</servlet-name>
        <jsp-file>/views/cart.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Edit</servlet-name>
        <jsp-file>/views/edit.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Add</servlet-name>
        <jsp-file>/views/add.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>About</servlet-name>
        <jsp-file>/views/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Products</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductDetail</servlet-name>
        <url-pattern>/product_detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductRemove</servlet-name>
        <url-pattern>/product_remove</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToCart</servlet-name>
        <url-pattern>/addtocart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductOperation</servlet-name>
        <url-pattern>/product_operation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveFromCart</servlet-name>
        <url-pattern>/removefromcart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommentOperation</servlet-name>
        <url-pattern>/comment_operation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Buy</servlet-name>
        <url-pattern>/buy</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Edit</servlet-name>
        <url-pattern>/edit_product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Add</servlet-name>
        <url-pattern>/add_product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>About</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>
</web-app>
