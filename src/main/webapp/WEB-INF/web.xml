<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>ru.itis.kpfu.marsel_mustafin.controllers.servlets.Login</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginPage</servlet-name>
    <jsp-file>ru/itis/kpfu/marsel_mustafi/views/jsp/login.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>ru.itis.kpfu.marsel_mustafin.controllers.servlets.Logout</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShopMain</servlet-name>
    <servlet-class>ru.itis.kpfu.marsel_mustafin.controllers.servlets.ShopMain</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginPage</servlet-name>
    <url-pattern>/loginpage</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShopMain</servlet-name>
    <url-pattern>/main</url-pattern>
  </servlet-mapping>
</web-app>
